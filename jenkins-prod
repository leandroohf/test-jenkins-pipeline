pipeline {

    // This pipeline is for production
    agent any

    stages {
        stage('Checkout: show me prod tag') {
            steps {
                echo env.BUILD_TAG
            }
        }
        stage('Test') {
            steps {
                echo 'Testing before deploy in prod..'

            }
        }
        stage('Build') {
            steps {

                echo 'Building...'
            }
        }
        stage('Pushing') {
            steps {
                echo 'Pushing...'
            }
        }
        stage('Deploy') {
            steps {

                echo 'Deploying in prod'
            }
        }
        stage('Integration Test') {

            steps {
                echo 'Testing prod env'

            }
        }
    }
}
